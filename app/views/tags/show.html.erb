<%= form_with model: @tag, url: tag_path(@tag), method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag_bg %>
    <%= f.color_field :tag_bg, class: "form-control" %>
  </div>

  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>
